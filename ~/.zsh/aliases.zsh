
#* terminal
alias zshreload='source ~/.zshrc'
alias s='sudo'
alias aliases='cat ~/.zsh/aliases.zsh'

#* filesystem
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias nuke="rm -rf"
alias rm='rm -i' # ask confirmation

#* git
alias g='git'
alias a='add'
alias c='commit'
alias gaa='git add .'
alias gc='git commit'
alias gcm='git commit -m'
alias gcam='git commit -a -m'
alias gpl='git pull'
alias gps='git push'
alias grh='git reset --hard HEAD~1'
alias grs='git reset --soft HEAD~1'
alias gs='git status'
alias gu='git restore --staged' # unstage
alias gr='git restore'
alias gb='git branch'

#* software shortcuts
alias python=python3
